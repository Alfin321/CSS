    background-color: #333;
    color: white;
    padding: 20px;
    text-align: center;
}

main {
    padding: 20px;
}

h2 {
    margin-top: 40px;
}


.box {
    background-color: #e0e0e0;
    padding: 10px;
    margin: 20px 0;
    width: 200px;
}


.content-box {
    box-sizing: content-box;
    border: 2px solid #333;
}


.border-box {
    box-sizing: border-box;
    border: 2px solid #333;
}


.padding-box {
    padding: 20px;
    border: 2px solid #333;
}

.border-box {
    padding: 10px;
    border: 5px solid #333;
}

.margin-box {
    margin: 40px 0;
    border: 2px solid #333;
}


.padding-box, .border-box, .margin-box {
    background-color: #e8577b;
}

